@using WebProject.Controllers
@model TranslateViewModel
@{
    Layout = "_Layout";
}


<div class="text-center">
    <h1 class="p-3 mb-3 bg-dark text-white"> Týð Enskt til Føroyskt/Føroyskt til Enskt </h1>
</div>

<div class="container p-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="TranslateText" method="post" id="htmlform">
        <div class="row translation-row-background justify-content-center align-items-center" >
            <div class="col-5 text-center" style="background-color: rgb(45, 45, 45); height: 450px;">
                
                <label class="p-1 m-2 mt-3 w-75 fs-1 fw-semibold border bg-black text-white "> Enskt </label> <br>
                        
                <textarea asp-for="English" class="w-75 h-75 p-3 mb-1"></textarea>
                    
            </div>

            <div class="col-5 offset-1 text-center" style="background-color: rgb(45, 45, 45); height: 450px;">
                
                <label class="p-1 m-2 mt-3 w-75 fs-1 fw-semibold border bg-black text-white "> Føroyskt </label> <br>
                
                <textarea asp-for="Faroese" class="w-75 h-75 p-3 mb-1"></textarea>
            
            </div>
        </div>

        <div class="row">
            <div class="col p-3 text-center">

                <a asp-action="index" asp-controller="Translate" class="btn p-1 m-2 w-25 fs-3 border btn-info text-white">
                    Góðkenn týðing
                </a>

                <button type="submit" class="p-1 m-2 w-25 fs-3 border bg-success text-white "> Týð </button>

                <a asp-action="index" asp-controller="Create" class="btn p-1 m-2 w-25 fs-3 border btn-danger text-white">
                    Ger nýggja týðing
                </a>
            </div> 
        </div>
    
    </form>

        <div class="row">
            <div class="col p-3 text-center">

                <a asp-action="index" asp-controller="home" class="btn p-1 m-2 w-25 fs-3 border btn-dark text-white">
                    Aftur
                </a>
            </div>
        </div>
</div>

<h4 class="bg-primary text-white text-center p-2">Translation</h4>
<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>English</th>
            <th>Faroese</th>
            <th>Approval</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Translation t in ViewBag.LeftOverTranslations ?? Enumerable.Empty<Translation>()) {
            <tr>
                <td>@t.TranslationId</td>
                <td>@t.English</td>
                <td>@t.Faroese</td>
                <td>@t.Approval</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@t.TranslationId"
                            class="btn btn-sm btn-info">
                        Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@t.TranslationId"
                            class="btn btn-sm btn-warning">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@t.TranslationId"
                            class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
